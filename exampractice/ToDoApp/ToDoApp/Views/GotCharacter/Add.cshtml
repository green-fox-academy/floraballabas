@model GotCharacterApp.Models.GotCharacter
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    @using (Html.BeginForm("/gotcharacter/add", "gotcharacter"))
    {
        <p>Add new character so you can keep track of them!:</p>
        @Html.LabelFor(x => x.Name)@Html.TextBoxFor(model => model.Name)<br />
        @Html.LabelFor(x => x.IsFavourite)@Html.CheckBoxFor(x => x.IsFavourite)<br />
        @Html.LabelFor(x => x.IsAlive)@Html.CheckBoxFor(x => x.IsAlive)<br />
        <button type="submit" value="Submit">Add to the list!</button>
    }
</body>
</html>
