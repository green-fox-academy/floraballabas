@model ICollection<ToDoApp.Models.ToDo>
<!DOCTYPE HTML>
<html xmlns:th="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/CSS/StyleSheet.css")" />
</head>
<body>
    <h1>ToDos for today</h1>
    <h2><a href="/todo/add">Add new Todo</a></h2>
    <table>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>IsDone</th>
            <th>IsUrgent</th>
        </tr>
        @foreach (var item in @Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.IsDone</td>
                <td>@item.IsUrgent</td>
            </tr>
        }
    </table>
</body>
</html>
